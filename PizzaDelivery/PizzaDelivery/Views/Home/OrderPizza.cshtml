@model PizzaDelivery.Mocks.MocksPizzeys

@{
    ViewData["Title"] = "OrderPizza";
}

<form action="~/Home/SetProduct" method="post">
    @for (int i = 0; i < @ViewBag.count; i++)
    {
        <h3>Pizza # @(i+1)</h3>
        <p>
            <label>Name Pizza</label>
            <input list="pizza" type="text" name="products[@i].PizzaName" placeholder="choose sort of pizza" />
            <datalist id="pizza">
                @foreach (var item in Model.Pizzeys)
                {
                    <option value="@item.PizzaName"></option>
                }
            </datalist>
        </p>
        <p>
            <label>mark if you want bitter pizza</label>
            <input type="checkbox" name="products[@i].IsBitter" value="true" />
        </p>
        <p>
            <label>Size - 1 is small(4 pieces), 2 is medium(6 pieces), 3 is big(8 pieces)</label>
            <input type="number" id="size" name="products[@i].Size" step="1" min="1" max="3">
        </p>

    }
    <button type="submit"  value="SetProduct" class="registerbtn">OK</button>

</form>

